<Application x:Class="ECommerceApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ECommerceApp" 
             xmlns:viewModel="clr-namespace:ECommerceApp.ViewModel"
             xmlns:pages="clr-namespace:ECommerceApp.View.Pages">
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=viewModel:CatalogViewModel}">
            <pages:CatalogView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:CartViewModel}">
            <pages:CartView/>
        </DataTemplate>
        
    </Application.Resources>
</Application>
